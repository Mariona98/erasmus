<!-- Include header dynamically -->
<%- include('partials/header.ejs') %>

<div class="background"></div>
<div id="mission">
<h2>Ours mission </h2><br>
<p>
  The Erasmus programs offer an opportunity to experience different cultures in Europe and collaborate on specific topics.
  <strong> The aim of this website is to facilitate the search for a program. </strong>The idea is evolving, and we are open to suggestions and ideas on the "Contact Us" page.</p>
</div>
  <!-- Listing Section -->
<div class="listing">
  <div class="container">
    <% if (!entries[0]) { %>
      <p>No entries yet!</p>
    <% } else { %>
      <!-- Latest Posts (First Two) -->
      <center><h3 class="p-4 mt-6">Latest posts</h3></center>
      <div class="row">
        <!-- First Post -->
        <div class="col-md-6 col-lg-6 mt-6">
          <div class="card">
            <a href="/post/<%= entries[0].id %>" class="card-link" style="text-decoration: none; color: inherit;">
              <div class="card-image">
                <img src="/images/<%= entries[0].id %>" alt="Article Image" />
              </div>
              <div class="card-content">
                <p><strong>Country:</strong> <%= entries[0].country %></p>
                <p>
                  <strong>Dates:</strong>
                  <%= new Date(entries[0].entry_date).toLocaleDateString('en-GB') %> to 
                  <%= new Date(entries[0].end_date).toLocaleDateString('en-GB') %>
                </p>
                <p>
                  <strong>Ages:</strong>
                  <%= entries[0].age_limit_down || "N/A" %> - <%= entries[0].age_limit_up || "N/A" %>
                </p>
                <p style="font-size: 14px;"><strong>Posted at:</strong> <%= new Date(entries[0].created_at).toString().substring(0, 16) %></p>
              </div>
            </a>
          </div>
        </div>
        
        <!-- Second Post (if exists) -->
        <% if (entries[1]) { %>
          <div class="col-md-6 col-lg-6 mt-6">
            <div class="card">
              <a href="/post/<%= entries[1].id %>" class="card-link" style="text-decoration: none; color: inherit;">
                <div class="card-image">
                  <img src="/images/<%= entries[1].id %>" alt="Article Image" />
                </div>
                <div class="card-content">
                  <p><strong>Country:</strong> <%= entries[1].country %></p>
                  <p>
                    <strong>Dates:</strong>
                    <%= new Date(entries[1].entry_date).toLocaleDateString('en-GB') %> to 
                    <%= new Date(entries[1].end_date).toLocaleDateString('en-GB') %>
                  </p>
                  <p>
                    <strong>Ages:</strong>
                    <%= entries[1].age_limit_down || "N/A" %> - <%= entries[1].age_limit_up || "N/A" %>
                  </p>
                  <p style="font-size: 14px;"><strong>Posted at:</strong> <%= new Date(entries[1].created_at).toString().substring(0, 16) %></p>
                </div>
              </a>
            </div>
          </div>
        <% } %>
      </div> <!-- End row for Latest Posts -->
  
      <!-- Older Posts (Index > 1) -->
      <% if (entries.length > 2) { %>
        <div class="row" style="margin: 60px 0px">
          <center><h3 class="p-4">Older posts</h3></center>
          <% entries.forEach((entry, index) => { 
               if (index > 1) { %>
            <div class="col-md-4 col-lg-4 mt-6">
              <div class="card">
                <a href="/post/<%= entry.id %>" class="card-link" style="text-decoration: none; color: inherit;">
                  <div class="card-image">
                    <img src="/images/<%= entry.id %>" alt="Article Image" />
                  </div>
                  <div class="card-content">
                    <p><strong>Country:</strong> <%= entry.country %></p>
                    <p>
                      <strong>Dates:</strong>
                      <%= new Date(entry.entry_date).toLocaleDateString('en-GB') %> to 
                      <%= new Date(entry.end_date).toLocaleDateString('en-GB') %>
                    </p>
                    <p>
                      <strong>Ages:</strong> 
                      <%= entry.age_limit_down || "N/A" %> - <%= entry.age_limit_up || "N/A" %>
                    </p>
                    <p style="font-size: 12px;"><strong>Posted at:</strong> <%= new Date(entry.created_at).toString().substring(0, 16) %></p>
                  </div>
                </a>
              </div>
            </div>
          <% } }); %>
        </div> <!-- End row for Older Posts -->
      <% } %>
    <% } %>
    <!-- More button -->
    <div class="d-flex justify-content-end">
      <a class="text-white btn btn-primary" href="/posts">More</a>
    </div>
  </div> <!-- End container -->
</div> <!-- End listing -->

<%- include('partials/footer.ejs') %>
