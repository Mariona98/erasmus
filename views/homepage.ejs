<!-- Include header dynamically -->

<%- include('partials/header.ejs') %>

<!-- Filter/Search Section -->
<div id="filterswrapper" class="search-filter dropdown m-auto">
  <label for="category">Category:</label>

  <select id="category" class="form-select" aria-label="Default select example">
    <option selected>Open this select menu</option>
    <option value="1">All</option>
    <option value="2">Events</option>
    <option value="3">Talks</option>
    <option value="3">Meetups</option>
  </select>

  <label for="startDate">Start Date:</label>
  <input type="date" class="form-control mt-2" id="startDate" />

  <label for="endDate">End Date:</label>
  <input type="date" class="form-control mt-2" id="endDate" />

  <button id="searchBtn" type="submit" class="btn btn-primary">Search</button>
</div>
<div class="listingwrapper">
  <div class="background"></div>
  <!-- Listing Section -->
  <div class="listing">
    <!-- Example Card 1 -->

    <div class="container">
      <div class="row">
        <center><h3 class="p-4 mt-6">Latests posts</h3></center>
        <div class="col-sm">
          <div class="card">
            <div class="card-image">
              <!-- Remove "/public" in the src attribute -->
              <img src="/images/<%= entries[0].id %>" alt="Article Image" />
            </div>
            <div class="card-content">
              <h5 class="card-heading"><%= entries[0].title %></h5>

              <p class="card-subheading truncate">
                <%= entries[0].subheading %> | <%= entries[0].created_at %>
              </p>
              <p class="card-tags">#cart</p>
            </div>
          </div>
        </div>

        <div class="col-sm">
          <div class="card">
            <div class="card-image">
              <!-- Remove "/public" in the src attribute -->
              <img src="/images/<%= entries[1].id %>" alt="Article Image" />
            </div>
            <div class="card-content">
              <h5 class="card-heading"><%= entries[1].title %></h5>

              <p class="card-subheading truncate">
                <%= entries[1].subheading %> | <%= entries[1].created_at %>
              </p>
              <p class="card-tags">#cart</p>
            </div>
          </div>
        </div>
      </div>
      <div class="row" style="margin: 60px 0px">
        <center><h3 class="p-4">Older posts</h3></center>
        <% for(let i = 0; i< 8; i++ ){%> <% if(i >1){ %>
        <div class="col-sm col-4 mt-6">
          <div class="card">
            <div class="card-image">
              <!-- Remove "/public" in the src attribute -->
              <img src="/images/<%= entries[i].id %>" alt="Article Image" />
            </div>
            <div class="card-content">
              <h5 class="card-heading"><%= entries[i].title %></h5>

              <p class="card-subheading truncatelatest">
                <%= entries[i].subheading %> | <%= entries[i].created_at %>
              </p>
              <p class="card-tags">#cart</p>
            </div>
          </div>
        </div>

        <% }}; %>
        <div class="d-flex justify-content-end">
          <a class=" text-white btn btn-primary" href="/posts"
            >More</a
          >
        </div>
      </div>
    </div>
  </div>
</div>
<!-- Repeat more cards as needed -->

<%- include('partials/footer.ejs') %>
