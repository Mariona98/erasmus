<!-- Include header dynamically -->
<%- include('partials/header.ejs') %>

<section class="login-section">
  <form class="form-signin mt-5" action="/register" method="POST" >
    <img
      class=" m-auto"
      src="https://getbootstrap.com/docs/4.0/assets/brand/bootstrap-solid.svg"
      alt=""
      width="72"
      height="72"
    />
    <h1 class="m-auto">Registration form </h1><br>
    <label for="registerEmail" class="sr-only mt-2">Email address</label>
    <input
      type="email"
      id="registerEmail"
      class="form-control mt-2"
      placeholder="Email address"
      name="email"
      required
      autofocus=""
    />

    <label for="registerUsername" class="sr-only mt-2">Username</label>
    <input
      type="text"
      id="registerUsername"
      class="form-control mt-2"
      placeholder="Username"
      name="username"
      required
      autofocus=""
    />

    <label for="registerPassword" class="sr-only">Password</label>
    <input
      type="password"
      id="registerPassword"
      class="form-control mt-2"
      placeholder="Password"
      required
      name="password"
    />
    <label for="confirmpassword" class="sr-only">Confirm Password</label>
    <input
      type="password"
      id="confirmpassword"
      class="form-control mt-2"
      placeholder="Confirm password"
      required
      name="confirmpassword"
    />

    <div class="d-flex justify-content-between">
      <div class="checkbox my-3">
        <label>
          <input type="checkbox" value="remember-me" /> Remember me
        </label>
      </div>
      <br />
      <div class="checkbox my-3">
        <label>
          <input type="checkbox" value="true"  /> Are you an author?
        </label>
      </div>
      <br />
    </div>
    <button class="btn btn-lg btn-primary btn-block" type="submit">
     Register
    </button>
  </form>
</section>

<%- include('partials/footer.ejs') %>
